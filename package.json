{
  "name": "evm-scripts",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "clean": "hardhat clean && rimraf artifacts cache",
    "build": "npm run clean && npx hardhat compile",
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:js": "eslint --ignore-path .gitignore . --fix && ",
    "lint:sol": "solhint 'contracts/**/*.sol' && prettier --write 'contracts/**/*.sol'",
    "slither": "npm run clean && slither . --detect reentrancy-eth,reentrancy-no-eth,reentrancy-unlimited-gas",
    "evm_2_ss58": "node script/address_converter.js 0x302F0B71B8aD3CF6dD90aDb668E49b2168d652fd",
    "ss58_2_evm": "node script/address_converter.js hJKzPoi3MQnSLvbShxeDmzbtHncrMXe5zwS3Wa36P6kXeNpcv",
    "erc20_slot": "node script/erc20_slot.js 0 0x34cfb6da89f12770442ce8997e44f06ebb279225",
    "check_address": "node script/check_sum_address.js ffffffff00000000000000000000000000000001",
    "test-bridge": "npx hardhat test --grep bridge",
    "start-chain": "cd ../.. && make launch-evm",
    "init-chain": "node script/deploy.js init",
    "provisioning-chain": "node script/deploy.js deploy",
    "test-chain": "node script/deploy.js test"
  },
  "dependencies": {
    "@polkadot/api": "8.1.1",
    "@polkadot/api-augment": "8.1.1",
    "@polkadot/api-derive": "8.1.1",
    "@polkadot/keyring": "^9.0.1",
    "@polkadot/types": "8.1.1",
    "@polkadot/util": "^9.0.1",
    "@polkadot/util-crypto": "^9.0.1",
    "bn.js": "~5.2.0",
    "ethers": "~5.5.0",
    "keccak": "^3.0.2",
    "web3": "^1.7.5",
    "fs-extra": "^10.1.0",
    "ganache": "^7.3.2",
    "@openzeppelin/contracts": "^4.5.0",
    "@axelar-network/axelar-cgp-solidity": "^4.3.0",
    "@axelar-network/axelar-gmp-sdk-solidity": "^1.2.0",
    "@axelar-network/axelar-local-dev": "^1.1.0",
    "@axelar-network/axelarjs-sdk": "^0.5.0-alpha.12",
    "@openzeppelin/contracts-upgradeable": "4.7.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.5",
    "eslint": "^8.13.0",
    "hardhat": "^2.9.5",
    "hardhat-gas-reporter": "^1.0.7",
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "mocha": "^10.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0"
  },
  "engines": {
    "node": ">=16"
  }
}
